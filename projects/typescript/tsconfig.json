{
	"extends": ["@tsconfig/strictest/tsconfig.json", "@tsconfig/node18/tsconfig.json"],
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node",
		"verbatimModuleSyntax": true,
		"baseUrl": ".",
		"paths": {
			"#pkg/*": ["src/*"]
		},
		"noEmit": true
	},
	"include": ["src"]
}
